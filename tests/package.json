{
  "name": "ellaai-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Comprehensive test suite for EllaAI assessment execution system",
  "scripts": {
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "vitest run",
    "test:frontend:watch": "vitest",
    "test:frontend:ui": "vitest --ui",
    "test:frontend:coverage": "vitest run --coverage",
    "test:backend": "jest --config jest.config.js",
    "test:backend:watch": "jest --config jest.config.js --watch",
    "test:backend:coverage": "jest --config jest.config.js --coverage",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration",
    "test:security": "jest --config jest.config.js --testPathPattern=security",
    "test:performance": "jest --config jest.config.js --testPathPattern=performance",
    "test:smoke": "jest --config jest.config.js --testPathPattern=smoke",
    "test:smoke:critical": "jest --config jest.config.js --testPathPattern=smoke --testNamePattern=critical",
    "test:all": "npm run test:frontend:coverage && npm run test:backend:coverage",
    "test:ci": "npm run test:all -- --watchAll=false --ci",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "coverage:merge": "nyc merge coverage/frontend coverage/backend coverage/merged",
    "coverage:report": "nyc report --reporter=html --reporter=text --temp-dir=coverage/merged"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^0.34.1",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "jsdom": "^22.1.0",
    "nyc": "^15.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.5",
    "vitest": "^0.34.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-testing-library": "^5.11.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}